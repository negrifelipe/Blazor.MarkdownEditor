<ul class="nav nav-tabs border-top border-right small" role="tablist">
	<li class="nav-item">
		<button class="nav-link active rounded-0 border-top-0" id="nav-editor"
				data-bs-toggle="tab" data-bs-target="#tab-editor" type="button" role="tab">
			Editor
		</button>
	</li>
	<li class="nav-item">
		<button class="nav-link rounded-0 border-top-0" id="nav-preview" data-bs-toggle="tab"
				data-bs-target="#tab-preview" type="button" role="tab"
				@onclick=UpdatePreviewContent>
			Preview
		</button>
	</li>
</ul>
<div class="tab-content border-top-0 border-right border-left border-bottom">
	<div class="tab-pane fade show active" id="tab-editor" role="tabpanel"
		 aria-labelledby="nav-editor">
		<textarea class="form-control border-0 shadow-none"
				  style="height: @(Height + "px"); resize: none;" 
				  @bind-value="Content" @bind-value:event="oninput" />
	</div>
	<div class="tab-pane fade" id="tab-preview"
		 style="height: @(Height + "px"); padding: 0.375rem 0.75rem; overflow-y: auto" role="tabpanel"
		 aria-labelledby="nav-preview">
		@(new MarkupString(_previewContent))
	</div>
</div>
